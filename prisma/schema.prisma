generator client {
  provider = "prisma-client-js"
  output   = "./src/generated/prisma"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  extensions = [pgcrypto]
}



model User {
  id        Int        @id @default(autoincrement())
  username  String     @unique
  firstName String     @map("first_name")
  lastName  String     @map("last_name")
  isAdmin   Boolean    @map("is_admin") @default(false)
  email     String     @map("email") @unique
  password  String     @map("password")
  madeAt   DateTime    @map("made_at") @default(now())
  invoices  Invoice[]
}

model Enterprise {
  id        Int        @id @default(autoincrement())
  entRif    String     @unique @map("ent_rif")
  entName   String     @map("ent_name")
  entAddr   String     @map("ent_address")
  entPhone  String     @map("ent_phone_number")
  deducPerc Boolean    @map("retention_percentage") @default(false)
  invoices  Invoice[]
  serials   SerialTracker?

}

model SerialTracker {
  id        Int        @id @default(autoincrement())
  enterpId  Int        @map("enterprise_id") @unique
  serial    Int        @map("current_serial") @default(0)
  updateAt  DateTime   @map("updated_at")

  enterprise Enterprise @relation(fields: [enterpId], references: [id])
}


model Invoice {
  id        Int        @id @default(autoincrement())
  enterpId  Int        @map("enterprise_id") @unique
  userId    Int        @map("user_id")
  vendRif   String     @map("vendor_rif")
  vendName  String     @map("vendor_name")
  vendAddr  String     @map("vendor_address")
  vendPhone String     @map("vendor_phone_number")
  rcptNum   Int        @map("receipt_number")
  rcptName  String     @map("receipt_file_name")
  rcptUrl   String     @map("receipt_file_url")
  debNote   Decimal    @map("debit_note")
  credNote  Decimal    @map("credit_note")
  affecNum  Int        @map("affected_receipt_num")
  vatFree   Decimal    @map("vat_free_amount")
  ctrlNum   Int        @map("control_number")
  taxBase   Decimal    @map("taxable_base")
  vatPerc   Int        @map("vat_percentage")
  total     Decimal    @map("total")
  excel     String     @map("excel_file")
  sentTo    String     @map("sent_to")
  emission  DateTime   @map("emitted_at") @default(now())
  serial    Int        @map("serial") @unique

  user      User       @relation(fields: [userId], references: [id])
  enterprise Enterprise @relation(fields: [enterpId], references: [id])
}


model Contact {
  id        Int        @id @default(autoincrement())
  contType  Boolean    @map("contact_type") @default(false)
  contName  String     @map("contact_name") @unique 
  contEmail String     @map("contact_email") @unique
  contPhone String     @map("contact_phone_number")
  contRif   String     @map("contact_rif")
  contAddr  String     @map("contact_address")
}
